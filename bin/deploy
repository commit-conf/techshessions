#!/bin/bash

set -e

FOLDER=.gh-pages

if [ ! -d ${FOLDER} ]; then
  git clone -b gh-pages git@github.com:commit-conf/techshessions ${FOLDER}
  cd ${FOLDER}
else
  cd ${FOLDER}
  git pull
fi

rm -r *
cp -R ../_build/* .
git add -A
git commit -m "${1:-Update gh-pages}"
git push

cd ..
echo "Successfully uploaded" 